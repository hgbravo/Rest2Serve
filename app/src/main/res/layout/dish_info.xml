<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/dish_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dish_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            tools:text="Price: $11.99" />

        <TextView
            android:id="@+id/dish_allergens_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:text="Allergens:"
            tools:text="Allergens:" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dish_allergens_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dish_information"
        android:layout_toEndOf="@+id/dish_image"
        android:layout_toRightOf="@+id/dish_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/allergen_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/minWidth"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"/>

        <ImageView
            android:id="@+id/allergen_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/minWidth"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"/>

        <ImageView
            android:id="@+id/allergen_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/minWidth"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"/>

        <ImageView
            android:id="@+id/allergen_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/minWidth"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"/>

    </LinearLayout>

</RelativeLayout>