<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/small_dps"
    app:cardCornerRadius="@dimen/small_dps"
    android:layout_margin="@dimen/small_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_margin">

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="Lasagna" />

        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/maxWidth"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/dish_name"
            android:layout_alignParentBottom="false"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:contentDescription="@string/dish_image_description"
            app:srcCompat="@drawable/cheese_lasagna" />

        <TextView
            android:id="@+id/dish_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dish_image"
            android:layout_marginTop="@dimen/default_margin"
            tools:text="Layers pasta dish with meat bologna sauce, topped with mozzarella cheese and basil." />

        <LinearLayout
            android:id="@+id/dish_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/dish_image"
            android:layout_below="@id/dish_name"
            android:layout_toEndOf="@+id/dish_image"
            android:layout_toRightOf="@+id/dish_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                tools:text="Price: $11.99" />

            <TextView
                android:id="@+id/dish_allergens_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                tools:text="Allergens:" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dish_allergens_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dish_information"
            android:layout_toEndOf="@+id/dish_image"
            android:layout_toRightOf="@+id/dish_image"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/allergen_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/minWidth"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/ic_001" />

            <ImageView
                android:id="@+id/allergen_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/minWidth"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/ic_002"/>

            <ImageView
                android:id="@+id/allergen_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/minWidth"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/ic_003"/>

            <ImageView
                android:id="@+id/allergen_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/minWidth"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/ic_004"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
